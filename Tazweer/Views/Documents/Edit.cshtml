                <span asp-validation-for="passportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentsTypeId" class="control-label"></label>
                <select asp-for="DocumentsTypeId" class="form-control" asp-items="ViewBag.DocumentsTypeId"></select>
                <span asp-validation-for="DocumentsTypeId" class="text-danger"></span>
